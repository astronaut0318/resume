<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ptu.resume.auth.mapper.PermissionMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.ptu.resume.auth.entity.Permission">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="code" property="code"/>
        <result column="type" property="type"/>
        <result column="parent_id" property="parentId"/>
        <result column="path" property="path"/>
        <result column="icon" property="icon"/>
        <result column="component" property="component"/>
        <result column="sort" property="sort"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="is_deleted" property="isDeleted"/>
    </resultMap>

    <!-- 根据角色ID查询权限列表 -->
    <select id="selectPermissionsByRoleId" resultMap="BaseResultMap">
        SELECT p.*
        FROM auth_permission p
                 LEFT JOIN auth_role_permission rp ON p.id = rp.permission_id
        WHERE rp.role_id = #{roleId}
          AND p.is_deleted = 0
          AND p.status = 0
    </select>

    <!-- 根据用户ID查询权限列表 -->
    <select id="selectPermissionsByUserId" resultMap="BaseResultMap">
        SELECT DISTINCT p.*
        FROM auth_permission p
                 LEFT JOIN auth_role_permission rp ON p.id = rp.permission_id
                 LEFT JOIN auth_user_role ur ON rp.role_id = ur.role_id
        WHERE ur.user_id = #{userId}
          AND p.is_deleted = 0
          AND p.status = 0
    </select>

</mapper> 